<?xml-stylesheet type="text/css" href="chrome://global/skin/"?>
<?xml-stylesheet type="text/css" 
href="chrome://messenger/skin/preferences/preferences.css"?>

 <!DOCTYPE dialog SYSTEM "chrome://keynav/locale/options.dtd"> 

<dialog id="keynav-prefs"
		title="&options_window_title;"
    buttons="accept"
    xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
 
  <vbox align="left">
  	<hbox>
    <checkbox id="mailfolderkeynav" 
    	preference="extensions.keynav.MailFolderKeyNav" 
    	label="&options_enableMailFolderKeyNav.label;"/>
    </hbox>
	
	<hbox>
    <checkbox id="gomenumailfolderkeynavtoggle"
    	preference="extensions.keynav.GoMenuMailFolderKeyNavToggle" 
    	label="&options_addGoMenuQuickToggle.label;"/>
  </hbox>
  </vbox>

  <script type="application/javascript"
    src="chrome://global/content/preferencesBindings.js"/>
  <script type="application/javascript"
    src="chrome://keynav/content/preferences.js"/>

</dialog>