{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "author": "Andrew Hart",
  "version": "3.0",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "keynav@andrew.hart",
      "strict_min_version": "68.0a1"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "permissions": [
    "storage",
    "menus"
  ],

  "experiment_apis": {
    "myapi": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "myapi"
          ]
        ],
        "script": "api.js"
      }
    }
  }
}
